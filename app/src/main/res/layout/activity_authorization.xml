<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorizationActivity">


    <ImageView
        android:id="@+id/logo_frenzy"
        android:layout_width="271dp"
        android:layout_height="274dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/frenzy" />

    <TextView
        android:id="@+id/entrance_in_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/latoregular"
        android:text="Вход в систему"
        android:textColor="#060909"
        android:textColorHint="#040303"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo_frenzy"
        app:layout_constraintVertical_bias="0.342" />

    <EditText
        android:id="@+id/sign_in_email"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="30"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_button"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="15dp"
        android:elevation="2dp"
        android:fontFamily="@font/latoregular"
        android:hint="Электронная почта"
        android:paddingLeft="15dp"
        android:textSize="25dp"
        android:textColor="#33C4C3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrance_in_system" />

    <EditText
        android:id="@+id/sign_in_password"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/back_button"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="15dp"
        android:elevation="2dp"
        android:fontFamily="@font/latoregular"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:textColor="#33C4C3"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_email" />

    <TextView
        android:id="@+id/text_design_peoples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="DESIGN BY PEOPLES"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in_vk"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/back_button"
        android:drawableLeft="@drawable/vk_compact_logo__2021_present__svg_removebg_preview__1_"
        android:drawablePadding="0dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="14dp"
        android:text=" ВКонтакте"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrance_with_help" />

    <TextView
        android:id="@+id/text_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="или"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/back_button"
        android:drawablePadding="15dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-thin"
        android:text="Войти"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrance_with_help" />

    <TextView
        android:id="@+id/entrance_with_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/latoregular"
        android:text="Войти с помощью"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_or" />

    <TextView
        android:id="@+id/text_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/latoregular"
        android:text="Зарегистрироваться"
        android:textColor="#34C3C7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sign_in" />

    <TextView
        android:id="@+id/password_error_text"
        android:layout_width="387dp"
        android:layout_height="46dp"
        android:fontFamily="@font/latoregular"
        android:text="Длина пароля должна быть от 8 до 20 символов!"
        android:textAlignment="viewStart"
        android:textColor="#F9C73434"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_password"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in_google"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/back_button"
        android:drawableLeft="@drawable/google"
        android:drawablePadding="0dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="14dp"
        android:text="   Google"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrance_with_help" />

</androidx.constraintlayout.widget.ConstraintLayout>